<com.xgimi.ime.changjie.CandidateView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/candidates_view_height"
    android:gravity="fill"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="fill"
        android:orientation="horizontal">

        <Button
            android:id="@+id/arrow_left"
            android:layout_width="35dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button"
            android:clickable="true"
            android:textColor="@color/candidate_normal"
            android:textSize="@dimen/candidate_font_height" />


        <LinearLayout
            android:id="@+id/wordbar"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="fill"
            android:orientation="horizontal"></LinearLayout>
        <Button
            android:id="@+id/arrow_right"
            android:layout_width="35dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button"
            android:clickable="true"
            android:textColor="@color/candidate_normal"
            android:textSize="@dimen/candidate_font_height" />
    </LinearLayout>

</com.xgimi.ime.changjie.CandidateView>
