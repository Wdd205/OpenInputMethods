<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0px"
    android:verticalGap="@dimen/key_verticalgap"
    android:keyHeight="@dimen/key_height"
    >
    
    <Row>
        <Key android:keyLabel="\u3021" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="\u3022"/>
        <Key android:keyLabel="\u3023"/>
        <Key android:keyLabel="\u3024"/>
        <Key android:keyLabel="\u3025"/>
        <Key android:keyLabel="\u3026"/>
        <Key android:keyLabel="\u3027"/>
        <Key android:keyLabel="\u3028"/>
        <Key android:keyLabel="\u3029"/>
        <Key android:keyLabel="\u3007" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:keyLabel="\u300c" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="\u300d"/>
        <Key android:keyLabel="\u300e"/>
        <Key android:keyLabel="\u300f"/>
        <Key android:keyLabel="\u3010"/>
        <Key android:keyLabel="\u3011"/>     
        <Key android:keyLabel="\u3014"/>
        <Key android:keyLabel="\u3015"/>
        <Key android:keyLabel="\u300a"/>
        <Key android:keyLabel="\u300b" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="-2" android:keyLabel="123" 
             android:keyWidth="15%p"
             android:keyEdgeFlags="left"/>
        <Key android:keyLabel="\u3001"/>
        <Key android:keyLabel="\uff1a"/>
        <Key android:keyLabel="\uff1b"/>
        <Key android:keyLabel="\u2026"/>
        <Key android:keyLabel="\u3008"/>
        <Key android:keyLabel="\u3009"/>
        <Key android:keyLabel="\u2014"/>
        <Key android:codes="-5" android:keyIcon="@drawable/key_delete"
                android:keyWidth="15%p" android:isRepeatable="true"
                android:keyEdgeFlags="right"/>
    </Row>
    
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-3" android:keyIcon="@drawable/key_done" 
                android:keyWidth="10%p" android:keyEdgeFlags="left"/>
        <Key android:codes="-300" android:keyIcon="@drawable/key_char" 
                android:keyWidth="15%p"/>
        <Key android:keyLabel="\uff0c"/>
        <Key android:codes="32" android:keyIcon="@drawable/key_space" 
                android:keyWidth="20%p" android:isRepeatable="true"/>
        <Key android:keyLabel="\u3002"/>
        <Key android:codes="-600" android:keyIcon="@drawable/key_lang"
        		android:keyWidth="15%p"/>
        <Key android:codes="10" android:keyIcon="@drawable/key_enter" 
                android:keyWidth="20%p" android:keyEdgeFlags="right"/>
    </Row>
    
</Keyboard>
